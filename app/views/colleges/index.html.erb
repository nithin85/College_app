<p id="notice"><%= notice %></p>

<h1>Colleges</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.address %></td>
        <td><%= college.contact %></td>
        <td><%= link_to 'Show', college %></td>
        <td><%= link_to 'Edit', edit_college_path(college) %></td>
        <td><%= link_to 'Destroy', college, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<td><%= link_to 'Branches', college_branches_path(college) %></td>
				<td><%= link_to 'Students', students_college_path(college) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New College', new_college_path, :class =>"btn btn-primary" %>
<br>
<%= will_paginate @colleges %>
>
