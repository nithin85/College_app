.modal-dialog
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
      %h3  Students 
    .modal-body
      = form_for([@college,@branch,@student], :remote => :true) do |form| 
        -if student.errors.any? 
          #error_explanation
            %ul
              -student.errors.full_messages.each do |message| 
                %li= message
        .field  
          = form.label :Student_Name
          = form.text_field :student_name, class: "form-control"                                                                                                   
        .field
          = form.label :Student_address
          = form.text_field :student_address, class: "form-control"
        .field
          = form.label :Student_sem
          = form.number_field :student_sem, class: "form-control"
          %br
        .modal-footer
          .actions
            = form.submit class: "btn btn-primary" 
            = link_to "Cancel", '#' , class: "btn", data: {dismiss: "modal"}
